@model MVC_HW3.ViewModel.ForumModel
@{
    ViewBag.Title = "EditMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditMessage</h2>

<div class="form-group">
    @foreach (var title in Model.Ftitle)
    {
        @Html.LabelFor(p => title.fFT_Title, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p>  @Html.DisplayFor(p => title.fFT_Title)  @Html.DisplayFor(p => title.tEmployee.fEp_Nickname)  @Html.DisplayFor(p => title.fFT_Date)</p>
        </div>
    }
</div>



@using (Html.BeginForm("EditMessage", "ForumMyself", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Fmessage.First().fFM_Content, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(p => p.Fmessage.FirstOrDefault().fFM_Content, new { @id = "input", @name = "input", @placeholder = "Forum MessageContent" })
        </div>
    </div>
    
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">修改文章</button>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </div>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $('#input').cleditor();
        })
    </script>
}