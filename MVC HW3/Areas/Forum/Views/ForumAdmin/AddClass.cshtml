@model MVC_HW3.ViewModel.ForumModel
@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddClass</h2>

@using (Html.BeginForm("AddClass", "ForumAdmin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    
    
    <div class="form-group">
        @Html.LabelFor(p => p.Fclass.FirstOrDefault().fFC_Class, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(p => p.Fclass.FirstOrDefault().fFC_Class, new { htmlAttributes = new { @class = "form-control", placeholder = "Model Name" } })
            @Html.ValidationMessageFor(p => p.Fclass.FirstOrDefault().fFC_Class, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Fclass.FirstOrDefault().fFC_Picture, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @*@Html.EditorFor(p => p.Fclass.FirstOrDefault().fFC_Picture, new { htmlAttributes = new { type = "file", @class = "form-control", placeholder = "Product Image" } })*@
            
            <input type="file" name="ClassImage" class="form-control" />
            @Html.ValidationMessageFor(p => p.Fclass.FirstOrDefault().fFC_Picture, "", new { @class = "text-danger" })
            
            @ViewBag.message
        </div>
    </div>

    

    <div class="form-group">
        @Html.LabelFor(p => p.Fclass.FirstOrDefault().fFC_Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(p => p.Fclass.FirstOrDefault().fFC_Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
            @Html.ValidationMessageFor(p => p.Fclass.FirstOrDefault().fFC_Description, "", new { @class = "text-danger" })
            
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">新增</button>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>

}
