@model MVC_HW3.Models.tDependentsTravel
<div class="col-xs-6 paddingB20" name="depform">
    <div class="blue-border">
        <div class="form-group">
            <label class = "col-sm-4 control-label" >姓名</label>           
            <div class="col-sm-8">
                <p class="DeName"></p>
                @Html.HiddenFor(a=>a.fDe_ID,new {@class= "De_ID" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">關係</label>
            <div class="col-sm-8">
                <p class="DeRe"></p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">手機
            </label>
            <div class="col-sm-8">
                <p class="DeTel"></p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">身分證字號</label>
            <div class="col-sm-8">
                <p class="DeSSN"></p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">生日</label>
            <div class="col-sm-8">
                <p class="DeBirth"></p>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fTE_ID, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @{
                    var eat = new SelectList(new[]
                    {
                            new { Value = "1", Text = "葷" },
                            new { Value = "2", Text = "素" },
                            new { Value = "3", Text = "不占餐" },

                        }, "Value", "Text");
                }
                @Html.DropDownListFor(p => p.fTE_ID, eat, "請選擇", new { @class = "form-control required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fDT_Car, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @{
                    var car = new SelectList(new[]
                    {
                            new { Value = "true", Text = "占車位" },
                            new { Value = "false", Text = "不佔車位" },

                        }, "Value", "Text");
                }
                @Html.DropDownListFor(p => p.fDT_Car, car, "請選擇", new { @class = "form-control required iscar" })
            </div>
        </div>
        <div class="form-group hotel">
            @Html.LabelFor(p => p.fDT_Hotel, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @{
                    var hotel = new SelectList(new[]
                    {
                            new { Value = "true", Text = "住宿" },
                            new { Value = "false", Text = "不住宿" },

                        }, "Value", "Text");
                }
                @Html.DropDownListFor(p => p.fDT_Hotel, hotel, "請選擇", new { @class = "form-control required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fSI_ID, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @{
                    var si = new SelectList(new[]
                    {
                            new { Value = "1", Text = "孕婦" },
                            new { Value = "2", Text = "殘障" },

                        }, "Value", "Text");
                }
                @Html.DropDownListFor(p => p.fSI_ID, si, "請選擇", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fDT_Insurance, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.EditorFor(p => p.fDT_Insurance, new { htmlAttributes = new { @class = "form-control required checkname" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.fDT_Urgent, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.EditorFor(p => p.fDT_Urgent, new { htmlAttributes = new { @class = "form-control required checkname" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fDT_UTel, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.EditorFor(p => p.fDT_UTel, new { htmlAttributes = new { @class = "form-control required mobileTaiwan" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.fDT_Note, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8 paddingB20">
                @Html.EditorFor(p => p.fDT_Note, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="text-right paddingR20">
            <button class="deletD btn btn-primary">刪除</button>
        </div>
    </div>

</div>







