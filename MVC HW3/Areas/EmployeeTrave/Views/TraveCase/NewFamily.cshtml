@model MVC_HW3.Models.tFamily
    <div class="col-xs-6 paddingB20" name="familyform">
        <div class="blue-border">
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_Name, new { htmlAttributes = new { @class = "form-control required checkname" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fRe_ID, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @{
                        var re = new SelectList(new[]
                        {
                            new { Value = "4", Text = "父母" },
                            new { Value = "6", Text = "夫妻" },
                            new { Value = "7", Text = "子女" },
                            new { Value = "2", Text = "情侶" },
                            new { Value = "3", Text = "兄弟" },
                            new { Value = "8", Text = "姊妹" },
                            new { Value = "5", Text = "朋友" },
                            new { Value = "1", Text = "其他" },

                        }, "Value", "Text");
                    }
                    @Html.DropDownListFor(p => p.fRe_ID, re, "請選擇", new { @class = "form-control required" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Tel, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_Tel, new { htmlAttributes = new { @class = "form-control required mobileTaiwan" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_SSNumber, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_SSNumber, new { htmlAttributes = new { @class = "form-control required chkPid" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Birth, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_Birth, new { htmlAttributes = new { @class = "form-control required chkDate" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fTE_ID, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @{
                        var eat = new SelectList(new[]
                        {
                            new { Value = "1", Text = "葷" },
                            new { Value = "2", Text = "素" },
                            new { Value = "3", Text = "不占餐" },

                        }, "Value", "Text");
                    }
                    @Html.DropDownListFor(p => p.fTE_ID, eat, "請選擇", new { @class = "form-control required" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Car, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @{
                        var car = new SelectList(new[]
                        {
                            new { Value = "true", Text = "占車位" },
                            new { Value = "false", Text = "不佔車位" },

                        }, "Value", "Text");
                    }
                    @Html.DropDownListFor(p => p.fFa_Car, car, "請選擇", new { @class = "form-control required iscar" })
                </div>
            </div>
            <div class="form-group hotel">
                @Html.LabelFor(p => p.fFa_Hotel, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @{
                        var hotel = new SelectList(new[]
                        {
                            new { Value = "true", Text = "住宿" },
                            new { Value = "false", Text = "不住宿" },

                        }, "Value", "Text");
                    }
                    @Html.DropDownListFor(p => p.fFa_Hotel, hotel, "請選擇", new { @class = "form-control required" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fSI_ID, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @{
                        var si = new SelectList(new[]
                        {
                            new { Value = "1", Text = "孕婦" },
                            new { Value = "2", Text = "殘障" },

                        }, "Value", "Text");
                    }
                    @Html.DropDownListFor(p => p.fSI_ID, si, "請選擇", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Insurance, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_Insurance, new { htmlAttributes = new { @class = "form-control required checkname" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Urgent, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_Urgent, new { htmlAttributes = new { @class = "form-control required checkname" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_UTel, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(p => p.fFa_UTel, new { htmlAttributes = new { @class = "form-control required mobileTaiwan" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.fFa_Note, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8 paddingB20">
                    @Html.EditorFor(p => p.fFa_Note, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="text-right paddingR20" >
              <button class="delet btn btn-primary">刪除</button>
            </div>
        </div>

    </div>





