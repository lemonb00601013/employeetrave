@model MVC_HW3.Models.tTravelDetail

@{
    ViewBag.Title = "CreateDetail";
}

<div style="text-align:center;">
    <h2 style="color:brown">~推薦旅行好去處~</h2><hr />
</div>


@using (Html.BeginForm("CreateDetail", "Travel", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    //城市選擇
    <div class="form-group">
        @Html.LabelFor(t => t.fCC_ID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @{
                var Citys = new SelectList(ViewBag.tcity, "fCC_ID", "fCC_Place");
            }
            @Html.DropDownListFor(c => c.fCC_ID, Citys, "請選擇", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.fCC_ID, "", new { @class = "text-danger" })
        </div>
    </div>

                //類別選擇
                <div class="form-group">
                    @Html.LabelFor(t => t.fTC_ID, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-8">
                        @{
                            var tclass = new SelectList(ViewBag.tclass, "fTC_ID", "fTC_Class");
                        }
                        @Html.DropDownListFor(c => c.fTC_ID, tclass, "請選擇", new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.fTC_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                            //標題輸入
                            <div class="form-group">
                                @Html.LabelFor(t => t.fTD_Title, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(c => c.fTD_Title, new { htmlAttributes = new { @class = "form-control", placeholder = "想推薦的名稱" } })
                                    @Html.ValidationMessageFor(p => p.fTD_Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            //內容輸入
                            <div class="form-group">
                                @Html.LabelFor(t => t.fTD_Content, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(c => c.fTD_Content, new { htmlAttributes = new { @class = "form-control", placeholder = "特色、吸引人的地方...等等" } })
                                    @Html.ValidationMessageFor(p => p.fTD_Content, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            //選擇圖片
                            <div class="form-group">
                                @Html.LabelFor(p => p.fTD_Image, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @*@Html.EditorFor(p => p.fTD_Image, new { htmlAttributes = new { type = "file", @class = "form-control", placeholder = "Product Image" } })*@
                                    <input type="file" name="fImage" />
                                    @ViewBag.message
                                </div>
                            </div>

                            //輸入地址(座標)
                            <div class="form-group">
                                @Html.LabelFor(t => t.fTD_site, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(c => c.fTD_site, new { htmlAttributes = new { @class = "form-control", placeholder = "完整地址" } })
                                    @Html.ValidationMessageFor(p => p.fTD_site, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            //新增按鈕
                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-8">
                                    <button type="submit" class="btn btn-default" style="width:120px">新增</button>
                                </div>
                            </div>

                            }


<script>

</script>