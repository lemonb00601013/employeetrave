@model IEnumerable<MVC_HW3.Models.tCityCountry>
@{
    ViewBag.Title = "Edit";
}

<h2>修改地點</h2>
@using (Html.BeginForm("Edit", "TravelMapHome", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="name" class="col-md-2 control-label">
            地點名稱
        </label>
        <div class="col-md-10">
            @foreach (var ct in Model)
            {
                <input type="hidden" name="cityID" value="@ct.fCC_ID" />
                <input type="text" class="form-control" name="CityName" id="name" value="@ct.fCC_Place" />
            }
            
        </div>
    </div>
    <div class="form-group">
        <label for="desc" class="col-md-2 control-label">
            圖片
        </label>
        <div class="col-md-10">
            <input type="file" class="form-control" name="fImage" id="CityImg" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
}

